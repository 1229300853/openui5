<core:FragmentDefinition xmlns:m="sap.m" xmlns:core="sap.ui.core" type="XML">
	<m:HBox>
		<m:Select id="select" class="sapUiSmallMarginEnd" items="{$this>items}" change="_handleSelectionChange">
			<m:items>
				<core:Item text="{$this>text}" key="{$this>key}" />
			</m:items>
		</m:Select>
		<core:AggregationProxy ref="{$this>unit}" />
	</m:HBox>
</core:FragmentDefinition>