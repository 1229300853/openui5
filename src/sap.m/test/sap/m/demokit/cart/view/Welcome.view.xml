<mvc:View
	controllerName="sap.ui.demo.cart.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		showHeader="false"
		class="customBackground">
		<content>
			<l:BlockLayout background="Light">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="sapUiNoContentPadding">
						<Image
							src="{
								path: 'view>/welcomePictureUrl',
								formatter : '.formatter.pictureUrl'
							}"
							width="100%"
							height="100%"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
			<Title
				text="{i18n>promotedTitle}"
				titleStyle="H2"
				class="sapUiSmallMargin"/>

			<l:BlockLayout background="Dashboard">
				<l:BlockLayoutRow
					id="promotedRow"
					content="{view>/Promoted}">
					<l:content>
						<l:BlockLayoutCell>
							<l:Grid
								defaultSpan="XL12 L12 M12 S12"
								vSpacing="0"
								hSpacing="0">
								<FlexBox
									height="3.5rem">
									<l:VerticalLayout>
										<Link
											text="{view>Product/Name}"
											emphasized="true"
											press="onSelectProduct"
											class="sapUiTinyMarginBottom">
										</Link>
										<ObjectStatus
											text="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusText'
												}"
											state="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusState'}"/>
									</l:VerticalLayout>
								</FlexBox>
								<l:VerticalLayout width="100%" class="centeredImage">
									<Image
										src="{
											path: 'view>Product/PictureUrl',
											formatter : '.formatter.pictureUrl'
										}"
										densityAware="false"
										press="onPicturePress"
										width="50%"/>
								</l:VerticalLayout>
								<Button
									tooltip="{i18n>addToCart}"
									type="Emphasized"
									press="onAddButtonPress"
									icon="sap-icon://cart-3">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4" />
									</layoutData>
								</Button>

								<ObjectListItem
									class="welcomePrice"
									number="{
										parts:[
											{path:'view>Product/Price'},
											{path:'view>/Currency'}
										],
										type:'sap.ui.model.type.Currency',
										formatOptions:{showMeasure: false}
									}"
									numberUnit="{view>/Currency}">
									<layoutData>
										<l:GridData span="XL8 L8 M8 S8" />
									</layoutData>
								</ObjectListItem>
							</l:Grid>
						</l:BlockLayoutCell>
					</l:content>
				</l:BlockLayoutRow>
			</l:BlockLayout>

			<Title
				text="{i18n>viewedTitle}"
				titleStyle="H2"
				class="sapUiSmallMargin"/>

			<l:BlockLayout background="Dashboard">
				<l:BlockLayoutRow
					id="viewedRow"
					content="{view>/Viewed}">
					<l:content>
						<l:BlockLayoutCell class="sapUiContentPadding">
							<l:Grid
								defaultSpan="XL12 L12 M12 S12"
								vSpacing="0"
								hSpacing="0">
								<FlexBox height="3.5rem">
									<l:VerticalLayout>
										<Link
											text="{view>Product/Name}"
											emphasized="true"
											press="onSelectProduct"
											class="sapUiTinyMarginTopBottom ">
										</Link>
										<ObjectStatus
											text="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusText'
											}"
											state="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusState'}"/>
									</l:VerticalLayout>
								</FlexBox>
								<l:VerticalLayout
									width="100%"
									class="centeredImage">
									<Image
										src="{
											path: 'view>Product/PictureUrl',
											formatter : '.formatter.pictureUrl'
										}"
										press="onPicturePress"
										densityAware="false"
										width="75%"/>
								</l:VerticalLayout>
								<Button
									tooltip="{i18n>addToCart}"
									press="onAddButtonPress"
									icon="sap-icon://cart-3"
									type="Emphasized">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4" />
									</layoutData>
								</Button>
								<ObjectListItem
									class="welcomePrice"
									number="{
										parts:[
											{path:'view>Product/Price'},
											{path:'view>/Currency'}
										],
										type:'sap.ui.model.type.Currency',
										formatOptions:{showMeasure: false}
									}"
									numberUnit="{view>/Currency}">
									<layoutData>
										<l:GridData span="XL8 L8 M8 S8"/>
									</layoutData>
								</ObjectListItem>
							</l:Grid>
						</l:BlockLayoutCell>
					</l:content>
				</l:BlockLayoutRow>
			</l:BlockLayout>

			<Title
				text="{i18n>favoritTitle}"
				titleStyle="H2"
				class="sapUiSmallMargin"/>

			<l:BlockLayout background="Dashboard">
				<l:BlockLayoutRow
					id="favoriteRow"
					content="{view>/Favorite}">
					<l:content>
						<l:BlockLayoutCell class="sapUiContentPadding">
							<l:Grid
								defaultSpan="XL12 L12 M12 S12"
								vSpacing="0"
								hSpacing="0">
								<FlexBox height="3.5rem">
									<l:VerticalLayout>
										<Link
											text="{view>Product/Name}"
											emphasized="true"
											press="onSelectProduct"
											class="sapUiTinyMarginTopBottom">
										</Link>
										<ObjectStatus
											text="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusText'
											}"
											state="{
												path : 'view>Product/Status',
												formatter : '.formatter.statusState'}"/>
									</l:VerticalLayout>
								</FlexBox>
								<l:VerticalLayout
									width="100%"
									class="centeredImage">
									<Image
										src="{
											path: 'view>Product/PictureUrl',
											formatter : '.formatter.pictureUrl'
										}"
										press="onPicturePress"
										densityAware="false"
										width="75%"/>
								</l:VerticalLayout>
								<Button
									tooltip="{i18n>addToCart}"
									type="Emphasized"
									press="onAddButtonPress"
									icon="sap-icon://cart-3">
									<layoutData>
										<l:GridData span="XL4 L4 M4 S4" />
									</layoutData>
								</Button>
								<ObjectListItem
									class="welcomePrice"
									number="{
										parts:[
											{path:'view>Product/Price'},
											{path:'view>/Currency'}
										],
										type:'sap.ui.model.type.Currency',
										formatOptions:{showMeasure: false}
									}"
									numberUnit="{view>/Currency}">
									<layoutData>
										<l:GridData span="XL8 L8 M8 S8" />
									</layoutData>
								</ObjectListItem>
							</l:Grid>
						</l:BlockLayoutCell>
					</l:content>
				</l:BlockLayoutRow>
			</l:BlockLayout>
		</content>
		<dependents>
			<LightBox id="lightBox">
				<imageContent>
					<LightBoxItem
						imageSrc="{
							path: 'view>PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
						title="{view>Name}"/>
				</imageContent>
			</LightBox>
		</dependents>
	</Page>
</mvc:View>