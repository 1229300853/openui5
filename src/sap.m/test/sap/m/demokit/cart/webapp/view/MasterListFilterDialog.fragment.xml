<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<ViewSettingsDialog
		id="masterListFilterDialog"
		confirm="handleConfirm"
		cancel="handleCancel"
		resetFilters="handleResetFilters">
		<filterItems>
			<ViewSettingsFilterItem
				text="{i18n>availabilityText}"
				key="availabilityKey">
				<items>
					<ViewSettingsItem text="{i18n>availableProductsText}" key="Available" />
					<ViewSettingsItem text="{i18n>outOfStockProductsText}" key="OutOfStock" />
					<ViewSettingsItem text="{i18n>discontinuedProductsText}" key="Discontinued" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsCustomItem
				text="{i18n>priceText}"
				key="Price">
				<customControl>
					<l:VerticalLayout
						width="100%"
						class="sapUiContentPadding">
						<RangeSlider
							id="rangeSlider"
							width="100%"
							value2="5000"
							class="sapUiSmallMarginTop"
							max="5000"
							step="10"
							change="handleChange"/>
					</l:VerticalLayout>
				</customControl>
			</ViewSettingsCustomItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>