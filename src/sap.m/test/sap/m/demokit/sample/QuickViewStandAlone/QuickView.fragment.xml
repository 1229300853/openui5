<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Panel width="320px">
		<QuickViewCard
				cardId="{/cardId}"
				header="{/header}"
				icon="{/icon}"
				title="{/title}"
				titleUrl="{titleUrl}"
				description="{/description}"
				groups="{/groups}">
			<QuickViewGroup heading="{heading}" elements="{elements}">
				<QuickViewGroupElement
						label="{label}"
						value="{value}"
						url="{url}"
						type="{elementType}"
						target="{target}"
						>
				</QuickViewGroupElement>
			</QuickViewGroup>
		</QuickViewCard>
	</Panel>
</core:FragmentDefinition>
