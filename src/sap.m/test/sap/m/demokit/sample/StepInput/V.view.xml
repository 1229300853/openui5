<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">

    <VBox>
        <Label text="Step = 1 (default behavior); value = 6, min = 5, max = 15, width = 50%"/>
        <StepInput value="6" min="5" max="15" width="50%"/>

        <Label text="Step = 5 (customized scenario), no value, min and max limitations, width = 300px"/>
        <StepInput step="5" width="300px"/>

        <Label text="Step = 5 (customized scenario), no value, min and max limitations, width = 300px, largerStep = 3"/>
        <StepInput step="5" width="300px" largerStep="3"/>

        <Label text="Step = 1.1 (customized scenario), no value, min=-6, max=23.5"/>
        <StepInput step="1.1" min="-6" max="23.5"/>

        <Label text="Error, value = 9"/>
        <StepInput valueState="Error" value="9"/>

        <Label text="Warning"/>
        <StepInput valueState="Warning"/>

        <Label text="Disabled, value = 12.3"/>
        <StepInput enabled="false" value="12.3"/>

        <Label text="Read Only, value = 123"/>
        <StepInput editable="false" value="123"/>
    </VBox>

</mvc:View>