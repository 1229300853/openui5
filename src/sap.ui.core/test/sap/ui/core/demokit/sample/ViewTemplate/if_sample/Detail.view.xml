<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:template="sap.ui.core.template">
	<layout:VerticalLayout>
		<layout:content>
			<Label text="{CustomerName/#@sap:label}" />
			<Text text="{CustomerName}" />
			<Label text="{CityName/#@sap:label}" />
			<Text text="{CityName}" />
			<template:if test="{RegionName}">
				<template:then>
					<Label text="{RegionName/#@sap:label}" />
					<layout:HorizontalLayout>
						<layout:content>
							<core:Icon src="sap-icon://world"/>
							<Text text="{RegionName}" />
						</layout:content>
					</layout:HorizontalLayout>
				</template:then>
				<template:else>
					<Label text="No Region" />
				</template:else>
			</template:if>
			<template:if test="{MobilePhoneNumber}">
				<Label text="{MobilePhoneNumber/#@sap:label}" />
				<layout:HorizontalLayout>
					<layout:content>
						<core:Icon src="sap-icon://phone"/>
						<Text text="{MobilePhoneNumber}" />
					</layout:content>
				</layout:HorizontalLayout>
			</template:if>
		</layout:content>
	</layout:VerticalLayout>
</mvc:View>
