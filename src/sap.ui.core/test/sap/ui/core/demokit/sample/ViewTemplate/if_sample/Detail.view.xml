<mvc:View
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:template="sap.ui.core.template"
	isTemplate="true">
	<layout:VerticalLayout>
		<layout:content>
			<template:with path="meta>/CB_SALES_ORDER_SRV.Customer">
	 			<template:with path="meta>com.sap.vocabularies.UI.v1.HeaderInfo">
					<template:if test="{meta>ImageUrl}">
						<template:then>
							<Image src="{path: 'meta>ImageUrl', formatter: 'sap.ui.core.sample.ViewTemplate.if_sample.Component.help'}" />
						</template:then>
						<template:else>
							<Text text="{path: 'meta>Title/Value', formatter: 'sap.ui.core.sample.ViewTemplate.if_sample.Component.help'}" />
						</template:else>
					</template:if>
				</template:with>
				<template:repeat list="{meta>com.sap.vocabularies.UI.v1.Identification}">
					<template:if test="{meta>Label}">
						<Label text="{path: 'meta>Label', formatter: 'sap.ui.core.sample.ViewTemplate.if_sample.Component.help'}" />
						<Text text="{path: 'meta>Value', formatter: 'sap.ui.core.sample.ViewTemplate.if_sample.Component.help'}" />
					</template:if>
				</template:repeat>
			</template:with>
		</layout:content>
	</layout:VerticalLayout>
</mvc:View>
