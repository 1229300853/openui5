<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<HBox>
		<template:if test="{entityType>com.sap.vocabularies.UI.v1.Chart}">
			<template:with path="entityType>com.sap.vocabularies.UI.v1.Chart" var="chart">
				<Table headerText="{path: 'chart>Title', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"
					items="{= '{path:\'/' + ${meta>name} + '\', length: 3}' }">
					<columns>
						<Column> <!--  Empty column in upper right corner --> </Column>
						<template:repeat list="{chart>Measures}" var="column">
							<Column>
								<template:with path="column>"
									helper="sap.ui.model.odata.AnnotationHelper.resolvePath"
									var="property">
									<Text text="{path: 'property>com.sap.vocabularies.Common.v1.Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"/>
								</template:with>
							</Column>
						</template:repeat>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<Text text="{path: 'chart>Dimensions/0', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}" />
							</cells>
							<cells>
								<template:repeat list="{chart>Measures}" var="column">
									<Text text="{path: 'column>', formatter: 'sap.ui.model.odata.AnnotationHelper.simplePath'}" />
								</template:repeat>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</template:with>
		</template:if>
	</HBox>
</core:FragmentDefinition>
