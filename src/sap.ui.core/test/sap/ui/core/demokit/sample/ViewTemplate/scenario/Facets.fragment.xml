<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<template:repeat list="{facets>}" var="facet">
		<template:if test="{= ${facet>RecordType} === 'com.sap.vocabularies.UI.v1.CollectionFacet'}">
			<template:then>
				<form:SimpleForm>
					<form:title>
						<core:Title text="{path: 'facet>Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"/>
					</form:title>
					<template:with path="facet>Facets" var="facets">
						<core:Fragment fragmentName="sap.ui.core.sample.ViewTemplate.scenario.Facets" type="XML"/>
					</template:with>
				</form:SimpleForm>
			</template:then>
			<template:else>
				<template:if test="{= ${facet>RecordType} === 'com.sap.vocabularies.UI.v1.ReferenceFacet'}">
					<template:then>
						<template:if test="{path: 'facet>Target', formatter: 'sap.ui.model.odata.AnnotationHelper.isMultiple'}">
							<template:then>
								<core:Fragment fragmentName="sap.ui.core.sample.ViewTemplate.scenario.TableFacet" type="XML"/>
							</template:then>
							<template:else>
								<core:Fragment fragmentName="sap.ui.core.sample.ViewTemplate.scenario.FormFacet" type="XML"/>
							</template:else>
						</template:if>
					</template:then>
					<template:else>
						<form:SimpleForm>
							<form:title>
								<core:Title text="{path: 'facet>Label', formatter: 'sap.ui.model.odata.AnnotationHelper.format'}"/>
							</form:title>
							<Label text="Unsupported RecordType"/>
							<Text text="{facet>RecordType}"/>
						</form:SimpleForm>
					</template:else>
				</template:if>
			</template:else>
		</template:if>
	</template:repeat>
</core:FragmentDefinition>