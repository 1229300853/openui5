<mvc:View
	controllerName="sap.ui.core.sample.odata.v4.PropertyBinding.Main"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	>
	<VBox>
		<form:SimpleForm layout="ResponsiveGridLayout">
			<form:content>
				<Label text="Employee ID" />
				<Input value="{ui>/id}" />
				<Button text="Read" press="onReadPress" />
			</form:content>
		</form:SimpleForm>
		<form:SimpleForm id="EmployeeForm" layout="ResponsiveGridLayout"
				title="Basic employee information">
			<Label text="Id"/>
			<Text text="{ID}"/>

			<Label text="Name"/>
			<Text text="{Name}"/>

			<Label text="Room"/>
			<Text text="{ROOM_ID}"/>

			<Label text="Team"/>
			<Text text="{TEAM_ID}"/>

			<Label text="Age"/>
			<Text text="{AGE}"/>

			<Label text="Manager"/>
			<Text text="{MANAGER_ID}"/>

			<Label text="Is Manager"/>
			<Text text="{Is_Manager}"/>

			<Label text="Entry date"/>
			<Text id="ENTRYDATE" text="{ENTRYDATE}"/>

			<Label text="Location"/>
			<Text text="{LOCATION/City/POSTALCODE} {LOCATION/City/CITYNAME} {LOCATION/COUNTRY}"/>

			<Label text="Salary"/>
			<Text text="{SALARY/MONTHLY_BASIC_SALARY_AMOUNT} {SALARY/BASIC_SALARY_CURR} / Month"/>

			<Label text="Bonus"/>
			<Text text="{SALARY/YEARLY_BONUS_AMOUNT} {SALARY/BONUS_CURR} / Year"/>
		</form:SimpleForm>
	</VBox>
</mvc:View>
