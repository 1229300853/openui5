<mvc:View
	controllerName="sap.ui.core.sample.odata.v4.SalesOrders.Main"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
	<VBox>
		<Toolbar design="Transparent">
			<content>
				<Label design="Bold" labelFor="FavoriteProduct" text="Favorite product:">
					<layoutData>
						<ToolbarLayoutData shrinkable="false" />
					</layoutData>
				</Label>
				<Input id="FavoriteProduct" enabled="{ui>/bRealOData}" width="auto"
					value="{
						path: '/ProductList(\'HT-1000\')/Name',
						events : {
							dataReceived : '.onDataEvents',
							dataRequested : '.onDataEvents'
						}
					}">
					<layoutData>
						<ToolbarLayoutData shrinkable="false" />
					</layoutData>
				</Input>
				<Button icon="sap-icon://refresh"
					enabled="{ui>/bRealOData}"
					press="onRefreshFavoriteProduct"/>
				<Button icon="sap-icon://hello-world"
					enabled="{ui>/bRealOData}"
					press="onUpdateFavoriteProduct"
					tooltip="Update with current time as HH:mm"/>
				<ToolbarSpacer />
				<Button text="Refresh all"
					enabled="{ui>/bRealOData}"
					press="onRefreshAll"/>
			</content>
		</Toolbar>
		<Table id="SalesOrders" growing="true" growingThreshold="5" headerText="Sales Orders"
			items="{
					path : '/SalesOrderList',
					parameters : {
						'$expand' : 'SO_2_BP',
						'$select' : 'SalesOrderID,BuyerName,GrossAmount,CurrencyCode'
					},
					events : {
						dataReceived : '.onDataEvents',
						dataRequested : '.onDataEvents'
					}
				}"
			mode="SingleSelectMaster" selectionChange="onSalesOrdersSelect">
			<headerToolbar>
				<Toolbar>
					<content>
						<Button text="Create Sales Order" icon="sap-icon://add"
							enabled="{ui>/bRealOData}"
							press="onCreateSalesOrderDialog"/>
						<Button enabled="false" icon="{ui>/icon}" tooltip="{ui>/iconTooltip}"
							type="Transparent"/>
						<Button icon="sap-icon://refresh"
							enabled="{ui>/bRealOData}"
							press="onRefreshSalesOrdersList"/>
					</content>
					<dependents>
						<Dialog id="createSalesOrderDialog" title="Create New Sales Order">
							<buttons>
								<Button text="Create" icon="sap-icon://create"
									press="onCreateSalesOrder" type="Accept"/>
								<Button text="Cancel"  icon="sap-icon://sys-cancel-2"
									press="onCancelSalesOrder" type="Reject"/>
							</buttons>
							<content>
								<form:SimpleForm editable="true" layout="ResponsiveGridLayout">
									<form:content>
										<!-- TODO types should be determined automatically from OData $metadata -->
										<Label labelFor="BuyerID" text="Buyer ID"/>
										<!-- TODO Q: derive maxLength from type's constraints?! A: SmartField?! -->
										<Input id = "BuyerID"
											maxLength="10" value="{
												path: 'new>/BuyerID',
												type: 'sap.ui.model.odata.type.String',
												constraints: {maxLength: 10, nullable: false}}"
											type="Text"
											placeholder="Enter Buyer ID starting with '0'..."
											showSuggestion="true"
											suggestionItems="{/BusinessPartnerList}" >
											<suggestionItems>
												<core:Item text="{BusinessPartnerID}" />
											</suggestionItems>
										</Input>
									</form:content>
								</form:SimpleForm>
							</content>
						</Dialog>
					</dependents>
				</Toolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="Sales Order ID"/>
				</Column>
				<Column>
					<Text text="Buyer Name"/>
				</Column>
				<Column>
					<Text text="Gross Amount"/>
				</Column>
				<Column>
					<Text text="Currency"/>
				</Column>
				<Column>
					<Text text="Supplier Company Name"/>
				</Column>
				<Column>
					<Text text="Delete Sales Order"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{SalesOrderID}"/>
					</cells>
					<cells>
						<Text text="{BuyerName}"/>
					</cells>
					<cells>
						<Text text="{GrossAmount}"/>
					</cells>
					<cells>
						<Text text="{CurrencyCode}"/>
					</cells>
					<cells>
						<Text text="{SO_2_BP/CompanyName}"/>
					</cells>
					<cells>
						<Button text="Delete" press="onDeleteSalesOrder"
							enabled="{ui>/bRealOData}"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<VBox id="ObjectPage">
			<Toolbar design="Transparent">
				<content>
					<Title level="H2" titleStyle="H2" text="Sales Order Details"/>
					<Button icon="sap-icon://refresh" press="onRefreshSalesOrderDetails"/>
				</content>
			</Toolbar>
			<form:SimpleForm id="SalesOrderForm" layout="ResponsiveGridLayout">
				<form:content>
					<Label text="Sales Order ID" />
					<Text text="{SalesOrderID}" />
					<Label text="Created At" />
					<Text text="{CreatedAt}" />
					<Label text="Changed At" />
					<Text text="{ChangedAt}" />
					<Label text="Lifecycle Status Desc" />
					<Text text="{LifecycleStatusDesc}" />
					<Label text="Note" />
					<Text text="{Note}" />
				</form:content>
			</form:SimpleForm>
			<Table id="SalesOrderLineItems" headerText="Sales Order Line Items"
				items="{SO_2_SOITEM}" mode="SingleSelectMaster"
				selectionChange="onSalesOrderLineItemSelect">
				<columns>
					<Column>
						<Text text="Sales Order ID"/>
					</Column>
					<Column>
						<Text text="Product"/>
					</Column>
					<Column>
						<Text text="Supplier"/>
					</Column>
					<Column>
						<Text text="Gross Amount"/>
					</Column>
					<Column>
						<Text text="Delivery Date"/>
					</Column>
					<Column>
						<Text text="Note ({:= ${ui>/bRealOData} ? 'editable' : 'read-only'})"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{SalesOrderID}"/>
						</cells>
						<cells>
							<Text text="{Product/ProductName}"/>
						</cells>
						<cells>
							<Text text="{SOITEM_2_PRODUCT/SupplierName}"/>
						</cells>
						<cells>
							<Text text="{GrossAmount}"/>
						</cells>
						<cells>
							<Text text="{DeliveryDate}"/>
						</cells>
						<cells>
							<Input editable="{ui>/bRealOData}" value="{Note}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
		<VBox>
			<Toolbar design="Transparent">
				<content>
					<Title level="H2" titleStyle="H2" text="Supplier Details"/>
				</content>
			</Toolbar>
			<form:SimpleForm binding="{SOITEM_2_PRODUCT/PRODUCT_2_BP}" editable="true"
				id="SupplierDetailsForm" layout="ResponsiveGridLayout">
				<form:content>
					<Label text="Supplier" />
					<Text text="{CompanyName} {LegalForm}" />
					<Label labelFor="PhoneNumber" text="Phone Number" />
					<Input editable="{ui>/bRealOData}" id="PhoneNumber" value="{PhoneNumber}"/>
				</form:content>
			</form:SimpleForm>
		</VBox>
		<List id="SupplierContactData"
			headerText="Supplier Contact Information"
			items="{SOITEM_2_PRODUCT/PRODUCT_2_BP/BP_2_CONTACT}">
			<StandardListItem
				title="{FirstName} {LastName} {DateOfBirth}"
				description="{PhoneNumber}"
				info="{EmailAddress}"/>
		</List>
	</VBox>
</mvc:View>
