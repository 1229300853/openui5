<core:FragmentDefinition
	template:require="sap.ui.core.sample.odata.v4.SalesOrdersTemplate.Helper"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<template:alias name=".format"
			value="sap.ui.core.sample.odata.v4.SalesOrdersTemplate.Helper.format">
		<template:if test="{= ${meta>Name}.indexOf('Sales') === 0 }">
			<template:then>
				<Text text="~{path : 'meta>Name', formatter : '.format'}~"/>
			</template:then>
			<template:else>
				<Text text="{path : 'meta>Name', formatter : '.format'}"/>
			</template:else>
		</template:if>
	</template:alias>
</core:FragmentDefinition>