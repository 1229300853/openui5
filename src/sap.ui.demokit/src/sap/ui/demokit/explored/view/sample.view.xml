<mvc:View
	controllerName="sap.ui.demokit.explored.view.sample"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		id="page"
		navButtonPress="onNavBack" >
		<headerContent>
			<Button
				class="sapUiHideOnPhone"
				text="{i18n>sampleShowCode}"
				tooltip="{i18n>sampleShowCodeTooltip}"
				icon="sap-icon://syntax"
				press="onNavToCode" />
			<Button
			    id="toggleFullScreenBtn"
				class="sapUiHideOnPhone"
				text="{i18n>sampleFullScreen}"
				icon="sap-icon://full-screen"
				tooltip="{i18n>sampleFullScreenTooltip}"
				press="onToggleFullScreen" />
			<Button
				class="sapUiVisibleOnlyOnPhone"
				icon="sap-icon://syntax"
				press="onNavToCode" />
		</headerContent>
	</Page>
</mvc:View>