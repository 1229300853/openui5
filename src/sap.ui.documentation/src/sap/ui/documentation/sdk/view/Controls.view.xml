<mvc:View
		controllerName="sap.ui.documentation.sdk.controller.Controls"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:custom="sap.ui.documentation.sdk.controls">
	<ScrollContainer
			width="100%"
			height="100%"
			horizontal="false"
			vertical="true">

				<l:BlockLayout>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="sapUiDemokitLandingImageCell sapUiNoContentPadding">
						<Image
								id="phoneImage"
								src="./resources/sap/ui/documentation/sdk/images/Explored_S_cropped.jpg"
								width="100%"
								densityAware="false"
								visible="{device>/system/phone}"/>
						<Image	src="./resources/sap/ui/documentation/sdk/images/Explored_M_and_L_cropped.jpg"
								width="100%"
								densityAware="false"
								visible="{=!${device>/system/phone}}"/>
						<Text class="sapUiDocumentationExploredHeaderText sapUiDocumentationExploredHeaderTitleText"
								text="Samples"
								width="100%"
								textAlign="Left"/>
						<Text
								class="sapUiDocumentationExploredHeaderText sapUiDocumentationExploredSubText"
								text="Explore and download code samples"
								width="100%"
								textAlign="Left"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						title="Featured Controls"
						class="demokitInitialPagesColorPatternA sapUiDemokitLandingBlockHeadline"/>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternB">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://edit"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Input"
								text="Input Controls"
								titleStyle="H2"/>
						<Text
								text="User interaction made simple"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternC">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://list"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="List"
								text="Lists"
								titleStyle="H2"/>
						<Text
								text="Present data in orderly ways"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternD">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://table-view"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Table"
								text="Tables"
								titleStyle="H2"/>
						<Text
								text="Simple or powerful table controls"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternE">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://popup-window"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Popup"
								text="Popups"
								titleStyle="H2"/>
						<Text
								text="Popups like dialogs and popovers"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternC">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://grid"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Tile"
								text="Generic Tiles"
								titleStyle="H2"/>
						<Text
								text="Text, images, charts etc. in a tile"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternD">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://message-popup"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Message"
								text="Messaging"
								titleStyle="H2"/>
						<Text
								text="Popup short messages"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternE">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://header"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Bar"
								text="Bars"
								titleStyle="H2"/>
						<Text
								text="Easy headers or footers"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternB">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://tree"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Tree"
								text="Trees"
								titleStyle="H2"/>
						<Text
								text="Display data in a hierarchy"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						title="Layout &amp; Pages"
						class="demokitInitialPagesColorPatternA sapUiDemokitLandingBlockHeadline"/>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternB">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://header"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Object Page"
								text="Object Page"
								titleStyle="H2"/>
						<Text
								text="Responsive pages"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternC">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://screen-split-three"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Flexible Column Layout"
								text="Flexible Column Layout"
								titleStyle="H2"/>
						<Text
								text="Layout with up to 3 Column"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternD">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://chart-table-view"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Dynamic Page"
								text="Dynamic Page"
								titleStyle="H2"/>
						<Text
								text="Dynamic page layouts"
								class="sapUiTinyMarginBottom"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell class="demokitInitialPagesColorPatternE">
					<l:VerticalLayout>
						<core:Icon
								src="sap-icon://screen-split-one"
								color="Default"
								size="2rem"
								class="sapUiTinyMarginBottom"/>
						<custom:TitleLink
								filter="Split App"
								text="Split App"
								titleStyle="H2"/>
						<Text
								text="Responsive Layout with 2 Columns"
								class="sapUiTinyMarginBottom"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<core:Fragment id="footerFragment" fragmentName="sap.ui.documentation.sdk.view.Footer" type="XML" />
			</l:BlockLayoutRow>

		</l:BlockLayout>
	</ScrollContainer>
</mvc:View>
