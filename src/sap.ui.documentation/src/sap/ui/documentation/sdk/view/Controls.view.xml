<mvc:View
		controllerName="sap.ui.documentation.sdk.controller.Controls"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core">
	<ScrollContainer
			width="100%"
			height="100%"
			horizontal="false"
			vertical="true">
			<l:BlockLayout
					background="Mixed">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="sapUiNoContentPadding">
						<Image
								src="./resources/sap/ui/documentation/sdk/images/M_and_L_Cropped_274115.png"
								width="100%"/>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow>
					<l:BlockLayoutCell
							title="Featured Control Groups">
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://edit"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Input Controls"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Simple yet powerful controls to enable users to enter and interact with data."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Input field"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Combobox"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://list"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="List and Tree"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Lists make it possible to represent data in very flexible ways."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Standard List item"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Tree"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://table-view"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Tables"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Tables can be simple or complex depending on your requirements."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Responsive Table"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Grid Table"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://popup-window"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Popups"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Popups like dialogs and popovers."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Dialog"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Popover"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://grid"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Generic Tiles"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Some small descriptive text to explain the controls."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Generic Tile"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Slide Tile"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://message-popup"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Messaging"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Some small descriptive text to explain the controls."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Message Strip"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Message Dialog"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://header"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Bars"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Some small descriptive text to explain the controls."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Headers and Footers"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Responsive Toolbar"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://action"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Actions"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Some small descriptive text to explain the controls."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Button"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Action Sheet"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>

				<l:BlockLayoutRow>
					<l:BlockLayoutCell
							title="Layout &amp; Page Controls">
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
				<l:BlockLayoutRow>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://header"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Actions"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Some small descriptive text to explain the controls."
									class="sapUiSmallMarginBottom"/>
							<Link
									text="Button"
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Action Sheet"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://screen-split-three"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Flexible Column Layout"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Allows the viewing of multiple objects on one screen."
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Link to Control"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://chart-table-view"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Dynamic Page"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="This dynamic layout comes complete with snapping headers."
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Link to Control"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
					<l:BlockLayoutCell>
						<l:VerticalLayout>
							<core:Icon
									src="sap-icon://screen-split-one"
									color="Default"
									size="2rem"
									class="sapUiSmallMarginBottom"/>
							<Title
									text="Master Detail"
									titleStyle="H2"
									class="sapUiSmallMarginBottom"/>
							<Text
									text="Sometimes the simple layout is the better layout."
									class="sapUiTinyMarginBottom"/>
							<Link
									text="Link to Control"/>
						</l:VerticalLayout>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
	</ScrollContainer>
</mvc:View>
