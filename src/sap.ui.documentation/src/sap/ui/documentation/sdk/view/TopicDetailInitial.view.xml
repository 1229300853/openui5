<mvc:View
		height="100%"
		width="100%"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:l="sap.ui.layout"
		xmlns:mvc="sap.ui.core.mvc">
	<Page id="topicDetailPage"
		  showHeader="false"
		  class="sapUiNoContentPadding">
		<l:BlockLayout
				background="Accent">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image	src="./resources/sap/ui/documentation/sdk/images/Docu_S_cropped_274847.jpg"
							width="100%"
							densityAware="false"
							visible="{device>/system/phone}"/>
					<Image	src="./resources/sap/ui/documentation/sdk/images/Docu_M_and_L_cropped.jpg"
							width="100%"
							densityAware="false"
							visible="{=!${device>/system/phone}}"/>
					<Text class="sapUiDocumentationDocumentationHeaderText sapUiDocumentationDocumentationHeaderTitleText" text="Documentation" width="100%" textAlign="Left"/>
					<Text class="sapUiDocumentationDocumentationHeaderText sapUiDocumentationDocumentationHeaderSubText" text="Extend your UI5 knowledge base" width="100%" textAlign="Left"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						title="Quick Access to the Documentation Sections">
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						title="What's New?">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Read all about the latest updates for each new release of UI5."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="Read Me First">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Complete explanaitions of all the things you need to know before diving into UI5."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						width="2"
						title="Tutorials">
					<l:VerticalLayout
							width="100%">
						<Text
								text="The UI5 tutorials provide you with all major development paradigms of UI5, using practical examples in an interactive format."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						width="2"
						title="Developing Apps">
					<l:VerticalLayout
							width="100%">
						<Text
								text="This section contains the practical part, details and best practises that will help you while developing your apps, and what pitfalls you should look out for along the way."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="... with SAP Fiori Elements">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Developing SAP Fiori apps using SAP Fiori elements, and how to use them to save time and development costs."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="... with Analysis Path Framework">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Build and enhance interactive analytical web apps."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						title="Essentials">
					<l:VerticalLayout
							width="100%">
						<Text
								text="This section explains the development concepts of UI5."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="More About Controls">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Detailed information about UI5 controls and the libraries they live in."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="Extending Apps">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Adapt or replace views, extend or replace controllers and so much more."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>

				<l:BlockLayoutCell
						title="Developing Content">
					<l:VerticalLayout
							width="100%">
						<Text
								text="Learn more about creating your own controls or contributing to UI5."
								class="sapUiMediumMarginBottom"/>
						<Link
								text="View Documentation"
								class="demokitInitialPagesBrightLink"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>

			<l:BlockLayoutRow>
				<l:BlockLayoutCell
						class="demokitInitialPagesColorPatternFContrast">
					<HBox
							justifyContent="SpaceBetween"
							alignItems="Center">
						<Image
								src="./resources/sap/ui/documentation/sdk/images/SAP_grad_R_min.png"
								height="2.5rem">
						</Image>
						<HBox
								width="100%"
								justifyContent="End"
								wrap="Wrap">
							<Link
									class="demokitInitialPagesBrightLink sapUiLargeMarginEnd"
									text="Legal Disclosure"/>
							<Link
									class="demokitInitialPagesBrightLink sapUiLargeMarginEnd"
									text="Privacy"/>
							<Link
									class="demokitInitialPagesBrightLink"
									text="Terms of use"/>
						</HBox>
					</HBox>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>