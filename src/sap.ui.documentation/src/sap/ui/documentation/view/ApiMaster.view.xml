<mvc:View
		controllerName="sap.ui.documentation.controller.ApiMaster"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns:documentation="sap.ui.documentation.controls"
		xmlns="sap.m"
		xmlns:semantic="sap.m.semantic"
		class="sapContrast sapContrastPlus">

	<Page
			id="page"
			enableScrolling="false"
			showHeader="false"
			showSubHeader="false"
			showFooter="false"
			navButtonPress="onNavBack"
			showNavButton="false">
		<content>

			<documentation:SimpleTree
					title="API Reference"
					id="tree"
					height="100%"
					nodes="{ path: '/' }">
				<documentation:SimpleTreeNode selected="onNodeSelect"
						text="{text}"
						ref="{ref}"
						isSelected="{isSelected}">
				</documentation:SimpleTreeNode>
			</documentation:SimpleTree>

			<PullToRefresh
					id="pullToRefresh"
					visible="{device>/support/touch}"
					refresh="onRefresh" />
		</content>

	</Page>

</mvc:View>
