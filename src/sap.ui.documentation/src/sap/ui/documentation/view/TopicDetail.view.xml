<mvc:View
        height="100%"
        controllerName="sap.ui.documentation.controller.TopicDetail"
        id="sap.ui.documentation.controller.TopicDetail"
        xmlns="sap.f"
        xmlns:m="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core">
    <DynamicPage id="topicDetailPage" preserveHeaderStateOnScroll="true" fitContent="true">
        <title>
            <DynamicPageTitle>
                <heading>
                    <m:Title text="{/topictitle1}"/>
                </heading>
                <actions>
                    <m:Button
                            id="topicDetailBackToSearch"
                            text="Back to search results"
                            type="Transparent"
                            press="backToSearch"
                            visible="false"/>
                </actions>
            </DynamicPageTitle>
        </title>

        <header>
            <DynamicPageHeader pinnable="fale">
                <content>
                    <m:Text text="{/shortdesc}"/>
                </content>
            </DynamicPageHeader>
        </header>

        <content>
            <core:HTML id="testHTML" preferDOM="false" content='&lt;iframe style="width:100%;height:100%;" name="content" src="{/topicURL}" frameborder="0""&gt;&lt;/iframe&gt;'></core:HTML>
        </content>
    </DynamicPage>
</mvc:View>